{
    "name": "drnixx/yii2-telegram",
    "description": "The Telegram integration for the Yii framework",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "extension",
        "telegram",
        "bot"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Panteleeff",
            "email": "drnix@chess-online.com"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mongodb": "*",

        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-mongodb": "~3.0.0",
        "yiisoft/yii2-httpclient": "~2.0.0",

        "drnixx/yii2-onix": "^1.14",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/codeception": "^5.0.8",
        "codeception/module-asserts": ">= 3.0",
        "codeception/module-filesystem": "> 3.0",
        "codeception/verify": "^3.0",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-yii2": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "onix\\telegram\\": "src"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
